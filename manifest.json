{
  "name": "Video Player Select",
  "description": "Toggle between major video sites",
  "version": "1.5.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-2.0.3.min.js", "copylinkaddress.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "images/vidselect-16.png",
    "32": "images/vidselect.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "*://*.youtube.com/watch*",
    "*://*.youtu.be/watch*",
    "*://hooktube.com/watch*",
    "*://invidio.us/watch*"
  ]
}
